{
  "compilerOptions": {
    "target": "ES2015",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@layout/*": ["layout/*"],
      "@ui/*": ["ui/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["styles/*"],
      "@db/*": ["db/*"],
      "@hooks/*": ["hooks/*"],
      "@fonts/*": ["fonts/*"],
      "@utils/*": ["utils/*"],
      "@widgets/*": ["widgets/*"],
      "@contexts/*": ["contexts/*"],
      "@constants/*": ["constants/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
